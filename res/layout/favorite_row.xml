<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:paddingLeft="5dip"
    android:paddingTop="8dip"
    android:paddingBottom="8dip"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="2dip"
        >
        <ImageView
        	android:id="@+id/favorite_start_point_image" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/bullet_white"
            />
        <TextView
            android:id="@+id/favorite_start_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?android:attr/textColorPrimary"
            android:padding="2dip"
            android:text="Telefonplan"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView 
        	android:id="@+id/favorite_end_point_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/bullet_black"
            />
        <TextView
            android:id="@+id/favorite_end_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?android:attr/textColorPrimary"
            android:padding="2dip"
            android:text="T-Centralen"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/favorite_via_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView 
            android:id="@+id/favorite_via_point_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_via"
            />
        <TextView
            android:id="@+id/favorite_via_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?android:attr/textColorPrimary"
            android:padding="2dip"
            />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/favorite_transport_modes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:addStatesFromChildren="true"
            android:gravity="center_vertical"
            android:paddingRight="0dip"
            android:layout_marginTop="8dip"
        >
        <ImageView
            android:id="@+id/favorite_transport_mode_metro" 
            android:src="@drawable/transport_metro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingRight="5dip"
        />
        <ImageView 
            android:id="@+id/favorite_transport_mode_bus"
            android:src="@drawable/transport_bus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingRight="5dip"
        />
        <ImageView
            android:id="@+id/favorite_transport_mode_train"
            android:src="@drawable/transport_train"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingRight="5dip"
        />
        <ImageView 
            android:id="@+id/favorite_transport_mode_tram"
            android:src="@drawable/transport_lokalbana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingRight="5dip"
        />
        <ImageView
            android:id="@+id/favorite_transport_mode_wax"
            android:src="@drawable/transport_boat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingRight="5dip"
        />
        <ImageView 
            android:id="@+id/favorite_transport_mode_fly"
            android:src="@drawable/transport_fly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingRight="5dip"
        />
        <ImageView 
            android:id="@+id/favorite_transport_mode_nar"
            android:src="@drawable/transport_nar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingRight="5dip"
        />
        <ImageView 
            android:id="@+id/favorite_transport_mode_aex"
            android:src="@drawable/transport_aex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingRight="5dip"
        />
    </LinearLayout>
</LinearLayout>

