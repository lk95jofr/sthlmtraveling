<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#e4e4e4"
            android:paddingTop="5dip"
            >
            <LinearLayout
                android:focusable="true" android:focusableInTouchMode="true"
                android:layout_width="0px" android:layout_height="0px"
            />
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:addStatesFromChildren="true"
	            android:gravity="center_vertical"
	            android:paddingTop="5dip"
	            android:paddingBottom="10dip"
	            android:paddingLeft="3dip"
	            android:paddingRight="3dip">
	            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/textfield_search"
                   >
		            <AutoCompleteTextView 
		                android:id="@+id/from"
		                android:hint="@string/from"
		                android:dropDownWidth="fill_parent"
		                android:dropDownVerticalOffset="5dip"
		                android:layout_width="wrap_content"
		                android:layout_height="fill_parent"
		                android:textColor="#000"
		                android:singleLine="true"
		                android:layout_weight="1"
		                android:imeOptions="actionNext"
		                android:lines="1"
		                android:inputType="text"
		                android:background="@null"
		                />
				    <ProgressBar
				        android:id="@+id/from_progress"
				        android:indeterminate="true"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        style="?android:attr/progressBarStyleSmall"
				        android:layout_gravity="center_vertical"
				        android:visibility="gone"
				        />
	            </LinearLayout>
	            <ImageButton
	                    android:id="@+id/from_menu"
	                    android:src="@drawable/ic_input_get"
	                    android:layout_width="wrap_content"
	                    android:layout_height="fill_parent"
	                    android:paddingLeft="5dip"
	                    android:paddingRight="5dip"
	                    android:background="@drawable/btn_search_dialog"
	                    />
	        </LinearLayout>
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:addStatesFromChildren="true"
                android:gravity="center_vertical"
                android:paddingTop="5dip"
                android:paddingBottom="10dip"
                android:paddingLeft="3dip"
                android:paddingRight="3dip">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/textfield_search"
                   >
	                <AutoCompleteTextView 
	                    android:id="@+id/to"
	                    android:hint="@string/to"
	                    android:dropDownWidth="fill_parent"
                        android:dropDownVerticalOffset="5dip"
	                    android:layout_width="wrap_content"
	                    android:layout_height="fill_parent"
	                    android:textColor="#000"
	                    android:singleLine="true"
	                    android:layout_weight="1"
	                    android:imeOptions="actionDone"
	                    android:lines="1"
	                    android:inputType="text"
	                    android:background="@null"
	                    />
                    <ProgressBar
                        android:id="@+id/to_progress"
                        android:indeterminate="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone"
                        />
                </LinearLayout>
                <ImageButton
                        android:id="@+id/to_menu"
                        android:src="@drawable/ic_input_get"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:paddingLeft="5dip"
                        android:paddingRight="5dip"
                        android:background="@drawable/btn_search_dialog"
                        />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/planner_choose_time_group"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@+id/planner_check_now">
		            <RadioButton
		                android:id="@+id/planner_check_now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
		                android:text="@string/now_label"
		                android:textColor="#000"
		                />
                    <RadioButton
                        android:id="@+id/planner_check_later"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:text="@string/later_label"
                        android:textColor="#000"
                    />
            </RadioGroup>
            
            <TableLayout
                android:id="@+id/planner_change_time_layout"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:visibility="gone"
                >
                <TableRow>
	                <Spinner 
	                    android:id="@+id/departure_arrival_choice"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:drawSelectorOnTop="true"
	                />
                </TableRow>
                <TableRow>
	                <Button
	                    android:id="@+id/planner_route_time"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    />
	                <Button
	                    android:id="@+id/planner_route_date"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    />
                </TableRow>
                <!--
                <TableRow>
                    <CheckBox
                        android:id="@+id/planner_alternative_stops"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alternative stops"
                        android:textColor="#000"
                        />
                </TableRow>
                -->
            </TableLayout>
            <!-- 
            <LinearLayout
                android:id="@+id/planner_change_time_layout"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                >
                <Spinner 
                    android:id="@+id/departure_arrival_choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawSelectorOnTop="true"
                />
                <Button
					android:id="@+id/planner_route_time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
                    />
                <Button
					android:id="@+id/planner_route_date"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					/>
            </LinearLayout>
             -->
            <Button
                android:layout_marginTop="5dip"
				android:id="@+id/search_route"
				android:text="@string/search_label"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"/>
        </LinearLayout>

</ScrollView>
