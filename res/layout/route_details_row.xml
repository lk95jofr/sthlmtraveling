<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="6dip"
    android:paddingRight="4dip"
    android:paddingBottom="10dip"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dip"
        android:paddingRight="4dip"
        android:paddingBottom="4dip"
        >
	<ImageView
	    android:id="@+id/routes_row_transport"
	    android:src="@drawable/transport_metro_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:paddingTop="0dip"
        android:paddingLeft="5dip"
        android:paddingRight="10dip"
	    />
	<TextView 
	    android:id="@+id/routes_row"
	    android:text="sdsds sdksld dkjsldk slsdk ll dsk d lsdksl dskld ld  skd sl sdkld sk ldsdksdl sdl skdls dksl dkldk skd kd sl sl d kd skd ls"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="4dip"
	    android:textColor="?android:attr/textColorPrimary"
	    android:textSize="16dip"
	    />
    </LinearLayout>
	<LinearLayout
	    android:id="@+id/routes_messages"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="20dip"
	    android:paddingTop="2dip"
	    >   
    </LinearLayout>
</LinearLayout>

